<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Romarinho.App.WSPage"
             xmlns:viewmodel="clr-namespace:Romarinho.App.ViewModel"
             Title="Book">
    <ContentPage.Resources>
        <Style TargetType="Frame">
            <Setter Property="BorderColor" Value="{Binding BorderColorSetProperty}" />
        </Style>
    </ContentPage.Resources>
    <Grid RowDefinitions="50, *, Auto"
          ColumnDefinitions=".75*, .25*"
          Padding="10"
          RowSpacing="10"
          ColumnSpacing="10">
        <Grid
            x:Name="grid1"
            Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Text="Ativo" />
            <Label Grid.Column="1" Text="Qtde" />
            <Label Grid.Column="2" Text="Valor" />
            <Label Grid.Column="3" Text="Assessor" />
            <Label Grid.Column="4" Text="Tipo" />
            <Label Grid.Column="5" Text="Data" />
        </Grid>
        <CollectionView Grid.Row="1" Grid.ColumnSpan="2"
                        ItemsSource="{Binding Items}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Padding="5"
                        BorderColor="{Binding GambiarraDaCor}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0" Text="{Binding Ativo}"/>
                            <Label Grid.Column="1" Text="{Binding Quantidade}"/>
                            <Label Grid.Column="2" Text="{Binding Valor}"/>
                            <Label Grid.Column="3" Text="{Binding Assessor}"/>
                            <Label Grid.Column="4" Text="{Binding Tipo}"/>
                            <Label Grid.Column="5" Text="{Binding Data}"/>
                        </Grid>
                    </Frame>
                </DataTemplate>

            </CollectionView.ItemTemplate>

        </CollectionView>

        <Button Text="Minhas Ordens"
                Command="{Binding MinhasOrdensCommand}"
                Grid.Row="2"
                Grid.ColumnSpan="2"/>


    </Grid>

</ContentPage>
